<?xml version="1.0" encoding="utf-8"?>
<ua.com.besqueet.mtwain.separpicker.ui.view.SlidingRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tool_bar_size"
            android:background="@color/blue" >

            <ImageView
                android:layout_width="@dimen/tool_bar_size"
                android:layout_height="@dimen/tool_bar_size"
                android:id="@+id/btnBack"
                android:layout_alignParentRight="false"
                android:background="@drawable/toolbar_background"
                android:padding="@dimen/back_btn_padding"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_arrow_back_white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Шоти"
                android:id="@+id/barTitle"
                android:layout_toRightOf="@+id/btnBack"
                android:layout_centerVertical="true"
                android:textSize="21dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" >

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/containerContacts"
                android:background="@color/white" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:id="@+id/containerDetail" />
        </LinearLayout>
    </LinearLayout>

</ua.com.besqueet.mtwain.separpicker.ui.view.SlidingRelativeLayout>